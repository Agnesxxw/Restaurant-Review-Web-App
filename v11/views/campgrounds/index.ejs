<%- include('../partials/header'); %>

<div class="container">
    <header class='jumbotron'>
        <div class="container">
            <h1>Welcome to <span style="font-family: 'Pacifico', cursive;"><span style="color:cornflowerblue">Let</span><span style="color:yellowgreen">Us</span><span style="color: orange;">EatOut</span></span></h1>
            <p>View all real reviews on the restaurant nearby!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/LetUsEatOut/new">Add New Restaurant</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name%></h4>
                    </div>
                    <p>
                        <a href="/LetUsEatOut/<%=campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>

<%- include('../partials/footer'); %>